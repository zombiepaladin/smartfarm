	<div class="input">
		<%= f.label :email %>
		<br />
		<%= f.email_field :email, autofocus: true %>
	</div>

	<div class="input">
		<%= f.label :password %>
		<br />
		<%= f.password_field :password, autocomplete: "off" %>
	</div>

	<% if devise_mapping.rememberable? -%>
		<div>
			<%= f.check_box :remember_me %>
			<%= f.label :remember_me %>
		</div>
	<% end -%>

	<div class="login">
		<%= f.submit "Sign in" %>
	</div>
<% end %>
